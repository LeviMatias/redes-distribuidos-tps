{
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "name": "download_file",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/download-file",
            "args": [
                "-H", "localhost",
                "-p", "9000",
                "-d", "${workspaceFolder}/lib/files-client/c2.mp3",
                "-n", "s2.mp3",
                "-v"
            ]
        },
        {
            "cwd": "${workspaceFolder}",
            "name": "upload_file",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/upload-file",
            "args": [
                "-H", "localhost",
                "-p", "9000",
                "-d", "${workspaceFolder}/lib/files-client/test2.mp3",
                "-n", "s2.mp3 ",
                "-v"
            ]
        },
        {
            "cwd": "${workspaceFolder}",
            "name": "start_server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/start-server",
            "args": [
                "-H",
                "localhost",
                "-p",
                "9000",
                "-s",
                "${workspaceFolder}/lib/files-server/",
                "-v"
            ]
        }
    ]
}